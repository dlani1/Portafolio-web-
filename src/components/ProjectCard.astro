---
// Estas son las "props" que la tarjeta aceptar√°
interface Props {
  title: string;
  description: string;
  imgSrc: string;
  tags: string[]; 
  caseStudyLink: string; 
}

const { title, description, imgSrc, tags, caseStudyLink } = Astro.props;
---

<article class="bg-brand-gray rounded-xl overflow-hidden shadow-2xl transition-all duration-300 hover:shadow-[0_0_30px_rgba(229,62,62,0.3)] border border-transparent hover:border-brand-red/50 group">

  <a href={caseStudyLink}>
    <img 
      src={imgSrc || 'https://via.placeholder.com/800x450.png?text=Proyecto'} 
      alt={`Vista previa del proyecto ${title}`} 
      class="w-full h-auto aspect-video object-cover opacity-80 group-hover:opacity-100 transition-opacity"
    />
  </a>

  <div class="p-6 md:p-8">
    <h3 class="text-2xl font-bold text-white mb-2">{title}</h3>
    <p class="text-gray-300 mb-6">{description}</p>

    <div class="flex flex-wrap gap-2 mb-6">
      {tags.map((tag) => (
        <span class="bg-brand-red/10 text-brand-white text-sm font-medium px-5 py-1 rounded-full">
          {tag}
        </span>
      ))}
    </div>

    <a 
      href={caseStudyLink} 
      class="text-brand-red font-medium hover:underline text-lg"
    >
      Ver Estudio de Caso &rarr;
    </a>
  </div>
</article>